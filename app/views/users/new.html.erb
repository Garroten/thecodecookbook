<div class="container">
  <section class="main">
    <div class="row-fluid">      
      <center>
        <%= link_to image_tag('thecodecookbook300.png'), root_path %>
      </center>      
    </div>  
    <div class="row-fluid">
        <% @user.password = @user.password_confirmation = nil %>
        <%= error_messages_for :user, :class => 'alert alert-block alert-error fade in'  %>
        <%= form_for :user, :url => users_path do |f| -%>
          <center>
            <h1>Sign up as a new user</h1>
          </center>
          <br/>
          <fieldset>
            <div class="control-group">
              <label class="control-label" for="input01">
                <%= label_tag 'login' %>
              </label> 
              <div class="controls">
                <%= f.text_field :login, :class => "span4" %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label" for="input02">
                <%= label_tag 'email' %>
              </label>
              <div class="controls">
                <%= f.text_field :email, :class => "span4" %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label" for="input03">
                <%= label_tag 'password' %>
              </label>
              <div class="controls">
                <%= f.password_field :password, :class => "span4" %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="input02">
                <%= label_tag 'password_confirmation', 'Confirm Password' %>
              </label>
              <div class="controls">
                <%= f.password_field :password_confirmation, :class => "span4" %>
              </div>
          </fieldset>
          <div id='submit_login'>
              <%= submit_tag 'Sign up', :class => 'btn btn-primary' %>
          </div>
        <% end -%>     
    </div>      
  </section>
  <div class="footer margintop15">    
    <center>
      <a href="javascript: window.history. back()"> Â«back </a> | 
      <%= link_to 'Login', login_path %>
    </center>    
  </div>
</div>