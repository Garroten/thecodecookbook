<div class="container">
  <section class="main">
    <div class="row-fluid">      
      <center>
        <%= link_to image_tag('thecodecookbook300.png'), root_path %>
      </center>      
    </div>  
    <div class="row-fluid">
      <%= devise_error_messages! %>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <center>
          <h1>Sign up as a new user</h1>
        </center>
        <br/>
        <fieldset>
        <div class="control-group">
          <label class="control-label" for="input01">  
            <%= f.label :login %>
          </label> 
          <div class="controls">  
            <%= f.text_field :login, :autofocus => true, :class => "span4" %>
          </div>
        </div>
          <div class="control-group">
            <label class="control-label" for="input02">
              <%= f.label :email %>
            </label>
            <div class="controls">  
              <%= f.email_field :email, :class => "span4" %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="input03">
              <%= f.label :password %>
            </label>
            <div class="controls">
              <%= f.password_field :password, :class => "span4" %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="input02">
              <%= f.label :password_confirmation %>
            </label>
            <div class="controls">  
              <%= f.password_field :password_confirmation, :class => "span4" %>
            </div>
          </div>
        </fieldset>
        <div id='submit_login'>
          <center>
            <%= f.submit "Sign up", :class => 'btn btn-primary btn-large' %>    
          </center>               
        </div>
        <hr/>
        <div id="submit_login">
          <center>
            <%= link_to image_tag('signupwithfacebook.png'), user_omniauth_authorize_path(:facebook) %>
          </center>          
        </div>
      <% end %>
    </div>      
  </section>
  <div class="footer margintop15">    
    <center>
      <%= link_to "Back", :back %> | 
      <%= render "devise/shared/links" %>
    </center>    
  </div>
</div>
