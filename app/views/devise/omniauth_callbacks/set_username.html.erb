<div class="container">
  <section class="main">
    <div class="row-fluid">      
      <center>
        <%= link_to image_tag('thecodecookbook300.png'), root_path %>
      </center>      
    </div>  
    <div class="row-fluid">
      <%= form_for @user, :url => {:action => 'set_user_data'} do |f| %>     
        <% if !@user.nil? && @user.errors.any? %>
          <div class="alert alert-block alert-error fade in">          
            <a class="close" data-dismiss="alert">Ã—</a>
            <h2 class="alert-heading"><%= pluralize(@user.errors.count, "error") %> errors prohibited this user from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>  
        <center>
          <h1>Sign up as a new user</h1>
          <br/>
          <h3>Complete your facebook data:</h3>
        </center>
        <br/>
        <fieldset>
          <div class="control-group">
            <label class="control-label" for="input01">  
              <%= f.label :login %>
            </label> 
            <div class="controls">  
              <%= f.text_field :login, :autofocus => true, :class => "span4" %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label" for="input02">
              <%= f.label :email %>
            </label>
            <div class="controls">  
              <%= f.email_field :email, :class => "span4" %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="input03">
              <%= f.label :password %>
            </label>
            <div class="controls">
              <%= f.password_field :password, :class => "span4" %>
            </div>
          </div>
        </fieldset>
        <div id='submit_login'>
          <center>
            <%= f.submit "Finish registration", :class => 'btn btn-large btn-primary'%>
          </center>               
        </div>  
      <% end %>
    </div>      
  </section>  
</div>  