      body {
        margin: 0;
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-size: 13px;
        line-height: 18px;
        color: #333333;
        background-color: #F5F5F5;
        padding-bottom: 40px;        
      }
      
      .navbar{
        background-color: transparent;
      }
      
      .navbar-inner {
        background-color: transparent;        
        padding-left: 153px;
        padding-right: 20px;        
      }
      .menu_right a{
        color: white !important;
      }
      .navbar .nav > li > a {
        float: none;
        padding: 10px 20px 11px;
        line-height: 19px;
        color: #43240F;
        /*color: #77C6EB;*/
        text-decoration: none;
        text-shadow: 0 0 0 rgba(0, 0, 0, 0.25);
        font-size: 16px;
      }
      .navbar .nav > li > a:hover {
        background-color: transparent;
        color: #43240F;
        text-decoration: none;
      }
      .titlepers{
        font-size: 22px;
        padding-top: 10px;
        padding-bottom: 10px;
        border: none;
        box-shadow: none;
        margin-bottom: 0;
      }
      #new_recipe .span8 hr{
        margin: 0 0 18px;
      }
      
      #new_recipe .bootstrap-tagsinput{
        width: 95%;
        margin-left: 1%;
        border: none;
        box-shadow: none;
      }            
      div.wysiwyg{
        background: none;
        -webkit-box-shadow: none;
        box-shadow: none;
        border: none;
      }
      
      .draft{
        padding-top: 1%;
      }
      
      .recipebtn{
        margin-left: 61%;
      }
      
      #edit_recipe .span8 hr{
        margin: 0 0 18px;
      }
      
      #edit_recipe .bootstrap-tagsinput{
        width: 94%;
        margin-left: 1%;
        border: none;
        box-shadow: none;
      }    
      
      #edit_recipe .recipebtn{
        margin-left: 71%;
      }
            
    </style>
</head>
<body>
  <!-- ClickTale Top part -->
    <script type="text/javascript">
      var WRInitTime=(new Date()).getTime();
    </script>
  <!-- ClickTale end of Top part -->
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to image_tag('thecodecookbook200x130.png'), root_path, :class=>'brand' %>      
        <div class="nav-collapse">
          <ul class="nav pull-right">
            <% if user_signed_in? %>
              <li><%= link_to('logout', destroy_user_session_path, :method => :delete) %></li>
              <li class="menu_right"><%= link_to(current_user.login, current_user) %></li>
            <% else %>
              <li><%= link_to('login', new_user_session_path) %></li>
              <li class="menu_right"><%= link_to('Join Us!', new_user_registration_path)  %></li>
            <% end %> 
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
      <!--p class="notice"><.%= notice %></p>
      <p class="alert"><.%= alert %></p-->
      <% if flash[:warning]%>
        <div class="alert alert-block alert-error fade in">
          <a class="close" href="#" data-dismiss="alert">×</a>          
          <%= flash[:warning] %>
        </div>          
      <% end %>    
      <% if flash[:notice] %>
        <div class="alert alert-success fade in">
          <a class="close" data-dismiss="alert">×</a>
          <%= flash[:notice] %>
        </div>          
      <% end %> 
      <% if flash[:error] %>
        <div class="alert alert-block alert-error fade in">          
          <a class="close" data-dismiss="alert">×</a>
          <h4 class="alert-heading">You got an error!</h4>
          <p>
            <%= flash[:error] %>
          </p>
        </div>          
      <% end %> 
       
      <%= yield %>        
  
      <hr/>
      
