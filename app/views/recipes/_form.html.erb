<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text %><br />
	<div id="wmd-toolbar" class="wmd-toolbar"></div>
    <%= f.text_area :text, :id => "wmd-input", :class => "wmd-input"%>
  </div>
  <div class="field">
	<%= f.label :is_draft %><br />
    <%= f.check_box :is_draft %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript" src="/javascripts/wmd.js"></script>